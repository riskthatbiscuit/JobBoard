<div class='grid grid-cols-4'>ÃŸ
  <div class='col-span-3 w-full flex-col p-6'>
    {{#each jobs as |job|}}
      <div
        id='{{job.id}}'
        class='mb-3.5 overflow-hidden rounded-md bg-slate-200'
      >
        <div class='px-5 py-6'>
          <div class='flex h-8 items-center justify-between'>
              {{#if job.logo}}
                <img src='{{job.logo}}' alt=''></img>
              {{/if}}
            <div class='ml-3 mr-auto min-w-0'>
              <a
                href='{{job.url}}'
                class='truncate text-base font-semibold text-black'
              >{{job.job_title}}</a>
              <p class='text-sm'>{{job.company_name}}</p>
            </div>
          </div>
          <div class='mt-5 bg-green-200'>
            <div>
              {{#if job.remote}}
                <p>Remote: {{job.remote}}</p>
                <br />
              {{/if}}
              {{#if job.company_num_employees}}
                <p>Company employees: {{job.company_num_employees}}</p>
                <br />
              {{/if}}
              {{#if job.employment_type}}
                <p>Employment type: {{job.employment_type}}</p>
                <br />
              {{/if}}
              {{#if job.location}}
                <p>Location: {{job.location}}</p>
                <br />
              {{/if}}
              <p>Date posted: {{format_date date_posted}}</p>
            </div>
            <br />
            <p class=' text-base text-gray-800'>
              {{{job.text}}}
            </p>
            <br />
            <p>Keywords: {{job.keywords}}</p>
            <button
              type='click'
              class='job_card_button h-10 flex-shrink-0 rounded px-5'
              data-job-id='{{job.saved_job_id}}'
            >Delete</button>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

